<Widgets>
  <Colors>
     <Color name="transparent" alpha="0">#000000</Color>
     <Color name="translucent" alpha=".5">#808080</Color>
     <Color name="21 percent black" alpha=".21">#000000</Color>
     <Color name="50 percent" alpha=".5">#808080</Color>
     <Color name="shading color" alpha=".7">#101010</Color>
  </Colors>

 <Fonts>
      <DefaultFont>Lucida-regular-12</DefaultFont>
      <!-- custom fonts are decoded as fontname-size or fontname size. built-ins are font-style-size -->
      <CustomFont name="digital_7_mono">fonts/digital-7-mono.ttf</CustomFont>
  </Fonts>

<Widget id="example label">
  <property key="horizontal alignment">right</property>
  <Maximum w="500" h="80" />
  <Minimum w="500" h="80" />
  <Preferred w="500" h="80" />
  <property key="text">label 1</property>
  <property key="foreground">light blue</property>
  <property key="background">#000000</property>
  <property key="font">Lucida-REGULAR-30</property>
  <property key="border type">empty</property>
  <property key="border size">0 3</property>
  <Alignment x=".5" />
  <nohelp />
</Widget>
<Widget id="example label with gradient">
  <property key="horizontal alignment">right</property>
  <property key="text">label 2</property>
  <property key="foreground">light blue</property>
  <property key="gradient top">#717171</property>
  <property key="gradient bottom">#393939</property>
  <property key="font">Lucida-REGULAR-30</property>
  <property key="border type">empty</property>
  <property key="border size">0 3</property>
  <Alignment x=".5" />
  <nohelp />
</Widget>
<Widget id="label with icon">
  <property key="background">transparent</property>
  <property key="foreground">#ffffff</property>
  <property key="icon">icons/icon.png</property>
  <property key="text">label 3</property>
  <property key="border type">solid</property>
  <property key="border color">#cccccc</property>
  <property key="border size">1</property>
  <Alignment x=".5" />
  <nohelp />
</Widget>
<Widget id="button with multiple icons">
  <property key="border type">none</property>
  <property key="foreground">#ffffff</property>
  <property key="icon">icons/button.png</property>
  <property key="disabled icon">icons/button-disabled.png</property>
  <property key="horizontal text position">center</property>
  <Alignment x=".5" />
</Widget>
<Widget id="label with custom font">
  <property key="text">label 4</property>
  <property key="foreground">light blue</property>
  <property key="background">#000000</property>
  <property key="font">digital_7_mono-14</property>
  <property key="border type">empty</property>
  <property key="border size">3</property>
  <Alignment x=".5" />
</Widget>
<!-- Selection Box -->
<Widget id="Selection Box">
  <property key="foreground">light blue</property>
  <property key="background">#000000</property>
  <property key="border type">solid</property>
  <property key="border size">3</property>
  <property key="border color">light blue</property>
  <minimum width="100" hight="30" />
  <maximum width="100" hight="30" />
  <preferred width="100" hight="30" />
  <Alignment x=".5" />
</Widget>
<Widget id="Selection Box Popup">
  <property key="foreground">light blue</property>
  <property key="background">#000000</property>
  <property key="border type">solid</property>
  <property key="border size">3</property>
  <property key="border color">light blue</property>
  <Alignment x=".5" />
</Widget>
<Widget id="Selection Box Label">
  <property key="foreground">light blue</property>
  <property key="border type">solid</property>
  <property key="border size">1</property>
  <property key="border color">#ff0000</property>
  <Alignment x=".5" />
</Widget>
</Widgets>
